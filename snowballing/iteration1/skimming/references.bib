@inproceedings{10.1145/3663547.3746401,
author = {Gubbi Mohanbabu, Ananya and Sechayk, Yotam and Pavel, Amy},
title = {Task Mode: Dynamic Filtering for Task-Specific Web Navigation using LLMs},
year = {2025},
isbn = {9798400706769},
